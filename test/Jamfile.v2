# bring in the rules for testing
import testing ;

project convert_test 
    : requirements
        <warnings>on
        <toolset>gcc:<warnings>all
        <toolset>gcc:<cxxflags>"-Wno-unused-local-typedefs -Wno-unused-variable -Wno-long-long"
        <toolset>msvc:<warnings>all
        <toolset>msvc:<cxxflags>"/wd4996 /wd4512 /wd4610 /wd4510 /wd4127 /wd4701 /wd4127 /wd4305 /wd4244 /wd4714 /wd4189"
        <toolset>msvc:<asynch-exceptions>on
        <toolset>msvc:<define>_CRT_SECURE_NO_DEPRECATE
        <toolset>msvc:<define>_SCL_SECURE_NO_DEPRECATE
        <toolset>msvc:<define>_SCL_SECURE_NO_WARNINGS
        <toolset>msvc:<define>_CRT_SECURE_NO_WARNINGS
        <include>../include
    ;  

run callable.cpp            
    encryption.cpp          
    fallbacks.cpp           
    is_converter.cpp        
    lcast_converter.cpp     
    main.cpp                
    printf_converter.cpp    
    scratchpad.cpp          
    sfinae.cpp              
    stream_converter.cpp    
    strtol_converter.cpp    
    user_type.cpp           
                    :  :  :  : convert_test ;
#run spirit.cpp      :  :  :  : convert_test_spirit_converter ;

exe convert_test_performance : performance.cpp /boost/timer//boost_timer ;
    


